{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[LINUX][RUN TESTS][DEBUG]",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Build-Linux/libculTests.bin",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/runDir",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "[Windows] Run tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\Build-Windows\\Debug\\culTests.exe",
            "cwd": "${workspaceRoot}/runDir",
            "symbolSearchPath": "${workspaceRoot}/runDir",
            "args": [
                "-w",
                "1680",
                "-h",
                "900"
            ],
            "externalConsole": false,
            "logging": {
                "moduleLoad": false,
                "trace": true,
            }
        }
    ]
}