    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run cul test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/Build-Linux/culTests",
            "args": [
                "-w",
                "1280",
                "-h",
                "960"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/runDir",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Make Debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}