{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[LINUX][CMAKE][CREATE][DEBUG]",
            "type": "shell",
            "command": "cd Build-Linux && cmake .. -DCMAKE_BUILD_TYPE=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[LINUX] Make Debug",
            "type":"shell",
            "command": "clear && cd Build-Linux && time make -j12",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[LINUX] CMake + Make debug",
            "type":"shell",
            "command": "clear && cd Build-Linux && cmake .. -G \"Unix Makefiles\" -DCMAKE_BUILD_TYPE=Debug && time make -j12",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[LINUX] Clean CMake + Make debug",
            "type":"shell",
            "command": "clear && cd Build-Linux && rm -rfv * && cmake .. -G \"Unix Makefiles\" -DCMAKE_BUILD_TYPE=Debug && time make -j12",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[WINDOWS][CMAKE][CREATE DIR]",
            "type": "shell",
            "command": "if not exist \"Build-Windows\" mkdir \"Build-Windows\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "[WINDOWS][CMAKE][CREATE][DEBUG]",
            "type": "shell",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "cwd": "Build-Windows"
            },
            "dependsOn":"[WINDOWS][CMAKE][CREATE DIR]"
        },
        {
            "label": "[WINDOWS] Build All",
            "type":"shell",
            "command": "cls & cmake --build Build-Windows --config DEBUG -j16",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "[WINDOWS] Build Tests",
            "type":"shell",
            "command": "cls & cmake --build Build-Windows --config DEBUG -j16 --target culTests",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "[WINDOWS] CMake + Build All ",
            "type":"shell",
            "command": "cls && cmake --build Build-Windows --config DEBUG -j16",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": "[WINDOWS] CMake create"
        }
    ]
}